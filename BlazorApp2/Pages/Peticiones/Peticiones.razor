@page "/Peticiones"
<h3>Solicitudes de Vacaciones</h3>

<PageTitle>Peticiones Propias Vacaciones</PageTitle>

<RadzenCard Class="mt-4" Visible>
    <RadzenButton Click="()=>PeticionesPropias.Visible=!PeticionesPropias.Visible"
                  Text="@(PeticionesPropias.Visible? "Ocultar" : "Mostrar")"
                  ButtonStyle="@(PeticionesPropias.Visible? ButtonStyle.Light :  ButtonStyle.Primary)" style="margin-bottom: 10px" />
    <RadzenCard Class="mt-4" @ref="PeticionesPropias">
        <PeticionesVacacionesPropias />
        <ResumenMensual/>
    </RadzenCard>
</RadzenCard>

<br/>

<RadzenCard Class="mt-4">
   <RadzenButton Click="()=>InteractiveCalendar.Visible=!InteractiveCalendar.Visible"
                  Text="@(InteractiveCalendar.Visible? "Ocultar" : "Mostrar")"
                  ButtonStyle="@(InteractiveCalendar.Visible? ButtonStyle.Light :  ButtonStyle.Primary)" style="margin-bottom: 10px" />      
    <RadzenCard Class="mt-4" @ref="InteractiveCalendar">
       <BotonesTiposDias />
       
    </RadzenCard>
</RadzenCard>

<br/>




@code {


    protected RadzenCard PeticionesPropias = new();
    protected RadzenCard InteractiveCalendar = new();
}