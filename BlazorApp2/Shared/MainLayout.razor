@using System.Security.Claims
@inherits LayoutComponentBase


<RadzenDialog/>
<PageTitle>Gestión De Vacaciones</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>
        <AuthorizeView>
            <Authorized>
                <div class="top-row px-4 auth">
                    <LoginDisplay />
                </div>
                 <article class="content px-4">
                    @Body
                </article>
            </Authorized>
            <NotAuthorized>
                <div class="top-row px-4 auth">
                    <LoginDisplay />
                </div>
                <h2>Usuario No Autorizado.</h2>
                <p>Debe Loguearse en la Aplicación para utilizarla</p>
            </NotAuthorized>
        </AuthorizeView>
    </main>
</div>
